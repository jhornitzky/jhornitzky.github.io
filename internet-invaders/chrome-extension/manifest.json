{
    "name": "Internet Invaders",
    "action": {},
    "manifest_version": 3,
    "version": "1.0",
    "description": "Internet invaders across the web!",
    "permissions": [
        "activeTab",
        "scripting",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons":{
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "ii-styles.css"
            ],
            "js": [
                "ii-functions.js"
            ]
        }
    ]
}