{
    "name": "Loki Text",
    "action": {},
    "manifest_version": 3,
    "version": "1.0",
    "description": "Animates page text with multidimensionality when you click the icon",
    "permissions": [
        "activeTab",
        "scripting",
        "alarms"
    ],
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content-scripts.js"]
        }
    ],
    "web_accessible_resources":[
        "loki-text.js"
    ],
    "background": {
        "service_worker": "background.js",
        "persistent":false
    },
    "icons":{
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png"
    }
}